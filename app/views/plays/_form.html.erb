<%= simple_form_for @play do |f| %>
  <%= f.file_field :play_img %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "映画ジャンル") %>
  <%= f.input :title, label: "映画タイトル" %>
  <%= f.input :description, label: "映画あらすじ" %>
  <%= f.input :director, label: "映画監督" %>
  <%= f.submit "投稿する" %>
<% end %>